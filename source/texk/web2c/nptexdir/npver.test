LC_ALL=C; export LC_ALL;  LANGUAGE=C; export LANGUAGE

TEXMFCNF=$srcdir/../kpathsea; export TEXMFCNF
TEXINPUTS=$srcdir/ptexdir/tests:.; export TEXINPUTS

# check consistency between runtime terminal and log
./nptex -ini -etex -interaction batchmode -jobname npver1-log pver1.tex >npver1-term.log || exit 1
sed -n 's/^This is \([-A-Za-z]*\), Version [^-]*-\([^ ]*\) \(.*\)/\1 \2/p' \
  npver1-term.log >npver1-term_ed.log || exit 1
sed -n 's/^This is \([-A-Za-z]*\), Version [^-]*-\([^ ]*\) \(.*\)/\1 \2/p' \
  npver1-log.log >npver1-log_ed.log || exit 1
diff npver1-term_ed.log npver1-log_ed.log || exit 2

# check consistency between runtime and version output
./nptex -version >npver2-self.log || exit 1
sed -n '1 s/^\([-A-Za-z]*\) [^-]*-\([^ ]*\) \(.*\)/\1 \2/p' \
  npver2-self.log >npver2-self_ed.log || exit 1
diff npver1-term_ed.log npver2-self_ed.log || exit 4

# check consistency between version output and version primitives
./nptex -ini -etex -interaction batchmode -jobname npver2-prim pver2.tex || exit 1
sed -n 's/^Engine \([-A-Za-z]*\) \([^ ]*\) \(.*\)/\1 \2/p' \
  npver2-prim.log >npver2-prim_ed.log || exit 1
diff npver2-self_ed.log npver2-prim_ed.log || exit 8

exit 0

